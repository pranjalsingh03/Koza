<%- include('../layout/header') %>

<div class="container">
    <div class="blog my-4">
        <div class="col-lg-12">
            <% if (message) { %>
            <div class="alert alert-dismissible fade show alert-<%= message.type%>" role="alert">
                <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
                <strong>
                    <%= message.message %>
                </strong>
            </div>
            <% } %>
            <div class="table-responsive">
                <% if (blogs.length > 0) { %>
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Content</th>
                            <th>Author</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% blogs.forEach((blog, index) => { %>
                        <tr>
                            <td>
                                <%= index + 1 %>
                            </td>
                            <td>
                                <%= blog.title %>
                            </td>
                            <td>
                                <%= blog.content %>
                            </td>
                            <td>
                                <%= blog.author %>
                            </td>
                            <td>
                                <a href="/admin/editblog/<%= blog._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-l"></i></a>
                                <a href="/admin/removeblog/<%= blog._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-l"></i></a>
                            </td>
                            
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
                <% } else { %>
                <h3 class="display-4 text-center">No Product Found</h3>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('../layout/footer') %>
